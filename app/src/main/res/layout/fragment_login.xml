<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ab_app_bg"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:layout_weight="0.30"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:fontFamily="sans-serif"
            android:text="Login to Continue"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/editText_email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded_white_gray_border"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:singleLine="true"
            android:textColorHint="@color/text_gray"
            android:textSize="14sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:backgroundTint="@color/apptheme_primary"
            android:gravity="center"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/bg_trans"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText_password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_rounded_white_gray_border"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:singleLine="true"
            android:textColorHint="@color/apptheme_primary"
            android:textSize="14sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif"
            android:backgroundTint="@color/apptheme_primary"
            android:gravity="center"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/bg_trans"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.39"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_sign_in1"
            android:layout_width="140dp"
            android:layout_height="33dp"
            android:layout_below="@+id/editText_password"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/button_rounded_green"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:background="@drawable/login_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"
            android:text="Login"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/login_text" />


        <TextView
            android:id="@+id/text_forgot"
            android:layout_width="240dp"
            android:layout_height="22dp"
            android:layout_below="@+id/btn_sign_in"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@string/forgot_password"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/btn_sign_in_or"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_below="@+id/btn_sign_in"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:src="@drawable/or_symbol"
            android:text="Sign In"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Login with facebook"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/frag_login_fb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_password"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_weight="0.50"
                android:background="@drawable/button_rounded_gray"
                android:drawableLeft="@drawable/fb"
                android:drawablePadding="2dp"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:text="Facebook"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/frag_login_fb"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/facebookicon"
                android:visibility="gone" />

            <Button
                android:id="@+id/frag_login_google1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_password"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_weight="0.50"
                android:background="@drawable/button_rounded_gray"
                android:drawableLeft="@drawable/gplus_new"
                android:drawablePadding="2dp"
                android:minHeight="30dp"
                android:minWidth="30dp"
                android:text="Google+"
                android:textAllCaps="false"
                android:textColor="@color/colorRed"
                android:textSize="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/frag_login_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawablePadding="2dp"
                android:src="@drawable/googleplusicon"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_guest1"
            android:layout_width="240dp"
            android:layout_height="22dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/guest_login"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/text_guest"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/ab_guest_login"
            android:visibility="gone" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
