<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ab_app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/heyla" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_login"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ab_login_hey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="or"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/btn_create_new_account"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ab_create_an_account" />

            <ImageView
                android:id="@+id/btn_guest_login"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:src="@drawable/ab_guest_login" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@color/white"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Login with facebook"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/frag_login_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:src="@drawable/facebookicon" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>