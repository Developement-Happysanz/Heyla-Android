<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@drawable/user_background_heyla"
    android:orientation="vertical">

    <View
        android:id="@+id/view_red_bg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@color/title_red1" />

    <com.findafun.customview.CircleImageView
        android:id="@+id/img_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_profile"></com.findafun.customview.CircleImageView>

    <TextView
        android:id="@+id/user_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_profile_image"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:text="Name"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@id/txt_city_name"

        android:layout_alignTop="@id/txt_city_name"
        android:background="@drawable/img_city"/>

    <TextView
        android:id="@+id/txt_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile_name"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:text="City"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>