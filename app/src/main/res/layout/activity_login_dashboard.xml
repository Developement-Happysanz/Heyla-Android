<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ab_app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/heylalogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="60dp"
            android:text="Heyla"
            android:textColor="@color/apptheme_primary"
            android:textSize="65dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="372dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/login_button"
                android:fontFamily="sans-serif-condensed"
                android:text="Sign In"
                android:textColor="@color/login_text"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_sign_in"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif"
                android:text="Or"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_create_new_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_or"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/login_button"
                android:fontFamily="sans-serif-condensed"
                android:foreground="?android:attr/selectableItemBackground"
                android:stateListAnimator="@null"
                android:text="Sign UP"
                android:textColor="@color/login_text"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_guest_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frag_login_fb"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="35dp"
                android:text="Continue as Guest"
                android:textColor="@color/apptheme_primary"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/btn_guest_login"
                android:layout_below="@+id/frag_login_fb"
                android:layout_marginRight="85dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/skip_login" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_below="@+id/btn_guest_login"
                android:layout_gravity="center"
                android:background="@color/white"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_gflogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_create_new_account"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="27dp"
                android:fontFamily="sans-serif"
                android:text="Login with your facebook or google plus account"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


            </LinearLayout>

            <ImageView
                android:id="@+id/frag_login_gplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_gflogin"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                android:paddingLeft="90dp"
                android:src="@drawable/gplus" />

            <ImageView
                android:id="@+id/frag_login_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/frag_login_gplus"
                android:layout_centerHorizontal="true"
                android:paddingRight="90dp"
                android:src="@drawable/facebookicon" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>